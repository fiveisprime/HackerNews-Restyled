{
	"name": "Hacker News Restyled",
	"version": "0.5",

	"description": "Lots of helvetica, bigger text, extra white space and soft gradients for a better Hacker News experience.",

	"icons": { "16" : "icons/icon16.png", "48" : "icons/icon48.png", "128" : "icons/icon128.png" },

	"content_scripts": [ 
	{
		"all_frames": true,
		"css": [ "css/main.css" ],
		"js": [ "js/jquery.min.js","js/main.js" ],
		"matches": [ "http://news.ycombinator.com/", "http://news.ycombinator.com/news", "http://news.ycombinator.com/news2", "http://news.ycombinator.com/x*", "http://news.ycombinator.com/newest" ]
	},
	{
		"all_frames": true,
		"css": [ "css/comments.css" ],
		"js": [ "js/jquery.min.js","js/comments.js" ],
		"matches": [ "http://news.ycombinator.com/item*", "http://news.ycombinator.com/newcomments" ]
	} ]
}

